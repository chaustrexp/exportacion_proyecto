# Sistema de Routing para Dashboard SENA
# Habilita URLs amigables y redirige todo al routing.php

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /exportacion_proyecto/
    
    # Permitir acceso directo a archivos y directorios existentes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Excluir rutas específicas del routing
    RewriteCond %{REQUEST_URI} !^/exportacion_proyecto/auth/
    RewriteCond %{REQUEST_URI} !^/exportacion_proyecto/api/
    RewriteCond %{REQUEST_URI} !^/exportacion_proyecto/assets/
    RewriteCond %{REQUEST_URI} !^/exportacion_proyecto/views/
    RewriteCond %{REQUEST_URI} !^/exportacion_proyecto/verificar_conexion\.php
    
    # Redirigir todo lo demás al routing.php
    RewriteRule ^(.*)$ routing.php [QSA,L]
</IfModule>

# Proteger archivos sensibles
<FilesMatch "\.(md|sql|log|json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Habilitar compresión
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Habilitar caché
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
